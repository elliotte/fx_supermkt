<h1>Listing Deals</h1>

<table>
  <thead>
    <tr>
      <th>Sell currency</th>
      <th>Buy currency</th>
      <th>Rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deals.each do |deal| %>
      <tr>
        <td><%= deal.sell_currency %></td>
        <td><%= deal.buy_currency %></td>
        <td><%= deal.rate %></td>
        <td><%= link_to 'Show', [:vendors, deal], title: 'Show' %></td>
        <td><%= link_to 'Edit', edit_vendors_deal_path(deal), title: 'Edit' %></td>
        <td><%= link_to 'Destroy', [:vendors, deal], method: :delete, data: { confirm: 'Are you sure?' }, title: 'Delete' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Deal', new_vendors_deal_path, title: 'Add new deal.' %>
