<%= form_for([:customers, @purchase], remote: request.xhr? ) do |f| %>
  <%= error_messages(@purchase) %>

  <div class="field">
    <%= f.label :deal_id %><br>
    <%= f.select :deal_id, Deal.all.collect{|d| [d.name, d.id]} %>
  </div>
  <div class="field">
    <%= f.label :amount %><br>
    <%= f.text_field :amount %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
