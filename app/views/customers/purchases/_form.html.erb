<%= form_for([:customers, @purchase], remote: request.xhr? ) do |f| %>
  <% if @purchase.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@purchase.errors.count, "error") %> prohibited this customers_purchase from being saved:</h2>

      <ul>
      <% @purchase.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% unless @deal.blank? %>
    <div class="field">
      <%= f.label :deal_id %>
      <br>
      <%= f.label @deal.name %>
      <%= f.hidden_field :deal_id, value: @deal.id %>
      <!-- f.select :deal_id, Deal.all.collect{|d| [d.name, d.id]} -->
    </div>
  <% else %>
    <div class="field">
      <%= f.label :deal_id %><br>
      <%= f.select :deal_id, Deal.all.collect{|d| [d.name, d.id]} %>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :amount %><br>
    <%= f.text_field :amount %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
