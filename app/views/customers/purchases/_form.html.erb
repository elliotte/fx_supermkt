  <%= error_messages(@purchase) %>
  
  <% unless @deal.blank? %>
    <div class="field">
      <%= f.label :deal_id %>
      <br>
      <%= f.label @deal.name %>
      <%= f.hidden_field :deal_id, value: @deal.id %>
