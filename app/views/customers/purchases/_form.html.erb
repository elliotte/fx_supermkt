<%= form_for([:customers, @purchase], remote: request.xhr? ) do |f| %>
  <%= error_messages(@purchase) %>

  <% unless @deal.blank? %>
    <div class="field">
      <%= f.label :deal_id %>
      <br>
      <%= f.label @deal.name %>
      <%= f.hidden_field :deal_id, value: @deal.id %>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :amount %><br>
    <%= f.text_field :amount %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
