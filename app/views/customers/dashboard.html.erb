
<div class="">
  <h3><%= "Welcome #{login_person.email}"%></h3>
</div>


<h2>Recent Purchases:<h2>

<table border="1"  cellpadding="50">
  <thead>
    <tr>
      <th>Deal</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.deal.name %></td>
        <td><%= purchase.amount %></td>
        <td><%= link_to 'Show', [:customers, purchase], title: 'Show' %></td>
        <td><%= link_to 'Edit', edit_customers_purchase_path(purchase), model_options.merge(title: 'Edit')%></td>
        <td><%= link_to 'Destroy', [:customers, purchase], method: :delete, data: { confirm: 'Are you sure?' }, title: 'Delete' %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Purchase', new_customers_purchase_path, model_options.merge(title: 'Purchase New Deal.')%>
